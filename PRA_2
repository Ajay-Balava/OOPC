/* A program to convert feet into inches using class. */
#include<iostream>
using namespace std;

// defining convert class
class convert
{
	public:
	float x;
	void inch(float);
	//	void feet(float);
};

// defining methods
// this method converts feets into inches
void convert :: inch(float a)
{
	cout << a <<" feets = "<< (a*12) << " inches"<< endl;
}
/*
// this method converts inches into feets
void convert :: feet(float b)
{
	cout << b <<" inches = "<< (b/12) << " feets"<< endl;
}
*/

int main()
{
	convert a; //declaring object a
	
	cout << "Enter feet : ";
	cin >> a.x; 
	a.inch(a.x); // accessing inch method
	/*
	cout << "Enter Inches : ";
	cin >> a.x;
	a.feet(a.x); // accessing feet method
	*/
	return 0;	
}
