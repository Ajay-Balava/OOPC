/* A program to convert feet into inches using class. */
#include<iostream.h>
#include<conio.h>
class A
{
	int feet;

	public:
	void enterFeet()
	{
		cout<<"Enter feet:";
		cin>>feet;
	}

	int getFeet()
	{
		return feet;
	}

	void ConvertIntoInches(int a)
	{
		cout<<"Feet("<<feet<<")="<<"  "<<"inches("<<a*12<<")";
	}
};

void main()
{
	int c;
	clrscr();
	A f;
	f.enterFeet();
	f.ConvertIntoInches(c=getFeet());
	getch();
}



